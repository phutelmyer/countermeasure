# üîê Countermeasure Environment Configuration

# Application
APP_NAME=Countermeasure
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://countermeasure:secretpassword@localhost:5432/countermeasure_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Collector Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# External Services
CLAUDE_API_KEY=your-claude-api-key
MITRE_API_URL=https://attack.mitre.org/api/v1
GITHUB_TOKEN=your-github-token

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# Monitoring
PROMETHEUS_METRICS=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Feature Flags
ENABLE_AI_MAPPING=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.yml,.yaml,.json,.txt,.xml

# Tenant Configuration
DEFAULT_TENANT_SLUG=default
MAX_TENANTS_PER_INSTANCE=100