# Countermeasure API - Environment Configuration Example
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_URL=postgresql://countermeasure_user:your_secure_password@localhost:5432/countermeasure_db
# For development with SQLite (not recommended for production):
# DATABASE_URL=sqlite:///./countermeasure.db

# Security Configuration
SECRET_KEY=your-very-secure-secret-key-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=development
# Options: development, staging, production
DEBUG=true
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
# In production, set workers to number of CPU cores

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000"]
# Add your frontend URLs here

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Leave password empty if no authentication

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@countermeasure.dev

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=["yaml","yml","json","txt"]

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=8001
SENTRY_DSN=
# Add your Sentry DSN for error tracking

# Admin User Configuration (for initial setup)
DEFAULT_ADMIN_EMAIL=admin@countermeasure.dev
DEFAULT_ADMIN_PASSWORD=CountermeasureAdmin123!
# Change these after first setup!

# Multi-tenant Configuration
DEFAULT_TENANT_NAME=Default Organization
TENANT_SUBDOMAIN_ENABLED=false

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_AUDIT_LOGGING=true

# Performance Configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_HSTS=true
ENABLE_CSP=true

# Development Settings
RELOAD_ON_CHANGE=false
# Set to true for development auto-reload