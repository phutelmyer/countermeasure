# Countermeasure Collector - Environment Configuration Example
# Copy this file to .env and update values for your environment

# API Connection Configuration
API_URL=http://localhost:8000
API_TIMEOUT_SECONDS=30
API_RETRIES=3

# Authentication Configuration
DEFAULT_EMAIL=admin@countermeasure.dev
DEFAULT_PASSWORD=CountermeasureAdmin123!
# Change these to match your API credentials

# Collector Configuration
COLLECTOR_NAME=sigma-collector
COLLECTOR_VERSION=1.0.0
BATCH_SIZE=50
MAX_WORKERS=4
COLLECTION_TIMEOUT_MINUTES=30

# SIGMA Repository Configuration
SIGMA_REPO_URL=https://github.com/SigmaHQ/sigma.git
SIGMA_REPO_BRANCH=master
SIGMA_RULES_DIRECTORY=rules
SIGMA_CATEGORIES=["process_creation","network_connection","file_event","registry_event","image_load","dns"]
# Available categories: process_creation, network_connection, file_event, registry_event,
# image_load, dns, command_line, authentication, privilege_escalation, lateral_movement

# Collection Limits
COLLECTION_LIMIT=
# Leave empty for no limit, or set number (e.g., 100 for testing)
DRY_RUN=false
# Set to true to test without actually submitting data

# Git Configuration
GIT_CLONE_DEPTH=1
# Shallow clone for faster downloads
GIT_TIMEOUT_SECONDS=300
TEMP_DIR_PREFIX=countermeasure_sigma_

# Celery Configuration (Task Queue)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Celery Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_TASK_SOFT_TIME_LIMIT=1800
CELERY_TASK_TIME_LIMIT=3600

# Celery Beat Configuration (Scheduled Tasks)
CELERY_BEAT_SCHEDULE_ENABLED=false
# Enable for automated collection scheduling
CELERY_BEAT_SIGMA_COLLECTION_CRON="0 2 * * *"
# Daily at 2 AM UTC

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SOCKET_CONNECT_TIMEOUT=10
REDIS_SOCKET_TIMEOUT=10

# Flower UI Configuration (Celery Monitoring)
FLOWER_PORT=5555
FLOWER_ENABLED=false
# Set to true to enable Flower web UI
FLOWER_BASIC_AUTH=admin:password
# Change default credentials!

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=structured
# Options: structured (JSON), simple (text)
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/collector.log
LOG_FILE_ROTATION=10MB
LOG_FILE_RETENTION=7

# Monitoring Configuration
ENABLE_METRICS=true
PROMETHEUS_PORT=8002
HEALTH_CHECK_ENABLED=true

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60
EXPONENTIAL_BACKOFF=true

# Development Settings
ENVIRONMENT=development
# Options: development, staging, production
DEBUG=false
MOCK_API_RESPONSES=false
# Set to true for testing without API connection

# Data Processing Configuration
VALIDATE_SIGMA_RULES=true
SKIP_INVALID_RULES=true
EXTRACT_METADATA=true
ENRICH_WITH_MITRE=true

# File Processing
ALLOWED_FILE_EXTENSIONS=[".yml",".yaml"]
MAX_FILE_SIZE_MB=10
SKIP_HIDDEN_FILES=true

# Performance Tuning
ASYNC_HTTP_POOL_SIZE=100
ASYNC_HTTP_POOL_TTL=30
GIT_PARALLEL_PROCESSING=true

# Security Configuration
VERIFY_SSL_CERTIFICATES=true
# Set to false only for development with self-signed certs
SECURE_HEADERS=true

# Cache Configuration
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_ENTRIES=10000

# Collection Strategy
INCREMENTAL_COLLECTION=false
# Enable for faster updates (coming soon)
FORCE_FULL_COLLECTION=false
# Force complete re-collection even with cache

# Notification Configuration
SLACK_WEBHOOK_URL=
# Add webhook URL for collection notifications
TEAMS_WEBHOOK_URL=
# Add webhook URL for Teams notifications
EMAIL_NOTIFICATIONS=false
NOTIFICATION_ON_SUCCESS=false
NOTIFICATION_ON_ERROR=true